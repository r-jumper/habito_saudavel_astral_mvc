@{
    Layout = "_layout_calculadora";
}
@{
    ViewData["Title"] = "MACRO";
}

<head>
    <link rel="stylesheet" href="~/calc/styles/style.css">
    <link rel="stylesheet" href="~/calc/styles/print.css">
    <link rel="stylesheet" href="~/calc/styles/phone.css">
</head>

    <section id="main">        
        <section id="part02">
            <div id="calculator">
                <h1>Calculadora Macronutrientes</h1>
                <form>
                    <div>
                        <label for="nome">Insira seu nome:</label><br>
                        <input type="text" name="calculator" id="nome" class="datas" placeholder="Nome" autofocus>
                    </div>
                    <div>
                        <label for="idade">Insira sua idade:</label><br>
                        <input type="number" name="calculator" id="idade" class="datas" placeholder="Idade">
                    </div>
                    <div>
                        <label for="">Sexo:</label><br>
                        <input type="radio" name="calculator" id="masculino" checked>
                        <label for="masculino">Masculino</label>
                        <input type="radio" name="calculator" id="feminino">
                        <label for="feminino">Feminino</label>
                    </div>
                    <div>
                        <label for="peso">Insira seu peso:</label><br>
                        <input type="number" name="calculator" id="peso" class="datas" placeholder="Peso (kg)">
                    </div>

                    <div>
                        <label for="altura">Insira sua altura:</label><br>
                        <input type="number" name="calculator" id="altura" class="datas" placeholder="Em cm (ex: 180, 175)">
                    </div>
                    <div>
                        <label for="atividade">Nível de atividade física:</label><br>
                        <select name="calculator" id="atividade" class="datas">
                            <option value="selecionar">Selecionar-</option>
                            <option value="leve">Leve (1-3 dias por semana)</option>
                            <option value="moderada">Moderada (4-5 dias por semana)</option>
                            <option value="intensa">Intensa (6-7 dias por semana)</option>
                        </select>
                    </div>
                    <div>
                        <label for="">Objetivo:</label><br>
                        <select name="calculator" id="objetivo" class="datas">
                            <option value="selecionar">Selecionar-</option>
                            <option value="ganhar peso">Ganhar peso</option>
                            <option value="manter o peso">Manter o peso</option>
                            <option value="perder peso">Perder peso</option>
                        </select>
                    </div>
                    <button class="button fit">Calcular</button>
                </form>
            </div>
        </section>
    </section>


<body>
    <script src="~/calc/scripts/script.js"></script>
</body>