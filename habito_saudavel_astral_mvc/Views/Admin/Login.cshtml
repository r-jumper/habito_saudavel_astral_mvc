@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>
<head> 
    <link rel="stylesheet" href="../assets/css/loginstyle.css" />   
   
</head>

<section id="banner">
    <div id="page-wrapper">
        <div class="container">        
            <div class="content">

                <!--FORMULÁRIO DE LOGIN-->
                <div id="login">
                    <form method="post" action="">
                        <h1>Login</h1>
                        <p>
                            <label for="email_login">Seu e-mail</label>
                            <input id="email_login" name="email_login" required="required" type="text" placeholder="Digite seu email" />
                        </p>
        
                        <p>
                            <label for="senha_login">Sua senha</label>
                            <input id="senha_login" name="senha_login" required="required" type="password" placeholder="Digite sua senha" />
                        </p>
        
                        <p>
                            <input type="checkbox" name="manterlogado" id="manterlogado" value="" />
                            <label for="manterlogado">Manter-me logado</label>
                        </p>
        
                        <p>
                            <input type="submit" value="Logar" />
                            <a href="#">Recuperar senha</a>
                        </p>
        
                        <p class="link">
                            não tem conta?
                            <a asp-area="" asp-controller="Admin" asp-action="Cadastro">Cadastrar</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>